
<div class="flex flex-col items-center">
  <h1 class="text-3xl font-bold text-center mb-6 text-gray-800"><%= pattern.name %></h1>
  <%= image_tag pattern.preview, alt: "Pattern Preview for #{pattern.name}", class: "max-w-full" if pattern.preview.attached? %>
</div>

<% unless pattern.preview.attached? %>
  <p>No preview image available for this pattern.</p>
<% end %>
