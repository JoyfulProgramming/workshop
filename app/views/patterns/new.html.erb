<div class="flex flex-col items-center gap-3">
  <h1 class="text-3xl font-bold text-center m-3 text-gray-800">Upload Pattern</h1>

  <%= form_with(url: patterns_path, method: :post, local: true, multipart: true, turbo: false, html: { class: "max-w-lg mx-auto flex flex-col gap-3" }) do |form| %>
    <%= form.label :fcjson, "Select FCJSON file", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.file_field :fcjson, accept: ".fcjson", class: "block w-full text-lg text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>

    <div>
      <%= form.submit "Upload Pattern", class: "inline-block px-4 py-2 my-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-300" %>
    </div>
  <% end %>
</div>